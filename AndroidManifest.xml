<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.inc.im.serptracker" android:versionCode="7"
	android:versionName="0.95" android:installLocation="auto">
	
	<uses-sdk android:minSdkVersion="4" android:targetSdkVersion="8" />

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

	<application android:icon="@drawable/icon" android:label="@string/app_name"
		android:debuggable="false">
		<activity android:name=".MainActivity" android:label="@string/app_name"
			android:configChanges="orientation|keyboardHidden">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name="InsertWebsiteActivity"></activity>
		<activity android:name="PreferencesActivity"></activity>
		<activity android:name="ManageWebsitesActivity"></activity>
		<activity android:name="AboutActivity"></activity>


	</application>
</manifest>