<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/app_bg" android:orientation="vertical">

	<!-- ADMOB -->
	<LinearLayout android:layout_height="wrap_content"
		android:id="@+id/admob_banner" android:layout_width="fill_parent"
		android:orientation="vertical" android:gravity="center">
	</LinearLayout>


	<!-- IN HOUSE ADS -->
	<LinearLayout android:layout_height="wrap_content"
		android:id="@+id/inhouseAds" android:layout_width="fill_parent"
		android:orientation="vertical" android:gravity="center"
		android:visibility="gone" android:background="@color/red">
		<TextView android:layout_width="wrap_content" android:text="Featured message"
			android:layout_height="wrap_content" android:textSize="9dip"
			android:textColor="@color/white"></TextView>
		<TextView android:id="@+id/inhouseAdsText"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textSize="16dip" android:textColor="@color/white"
			android:layout_marginBottom="3dip" android:text="ad load failure"></TextView>
	</LinearLayout>


	<!-- SELECT WEBSITE SPINNER -->
	<LinearLayout android:layout_width="fill_parent"
		android:id="@+id/linearLayout1" android:layout_height="wrap_content"
		android:orientation="horizontal">
		<Spinner android:layout_height="wrap_content" android:id="@+id/spinner_profile"
			android:layout_width="fill_parent"></Spinner>
	</LinearLayout>

	<!-- RESULT START -->
	<ListView android:layout_height="wrap_content" android:id="@+id/listview_result"
		android:layout_width="fill_parent" android:layout_weight="1"></ListView>

	<!-- RUN BUTTON -->
	<Button android:id="@+id/button_run" android:text="@string/run_btton"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:background="@drawable/ok_button" style="@style/ButtonText"></Button>


	<!-- MENU BAR STAT -->
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:id="@+id/linearLayout2"
		android:orientation="horizontal" android:gravity="center"
		android:background="@drawable/menubar_bg">

		<!-- ADD PROFILE -->
		<LinearLayout android:layout_height="80dip"
			android:id="@+id/linearLayoutAddProfile" android:background="@android:color/black"
			android:layout_width="76dip" android:orientation="vertical"
			android:gravity="center" android:layout_margin="1dip">

			<ImageButton android:layout_height="wrap_content"
				android:src="@android:drawable/ic_menu_add" android:id="@+id/imageButton1"
				android:layout_width="wrap_content" android:background="@android:color/black"></ImageButton>
			<TextView android:text="@string/menubar_add" android:id="@+id/textView1"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textColor="@android:color/white" android:gravity="center"></TextView>

		</LinearLayout>


		<!-- MANAGE PROFILES -->
		<LinearLayout android:layout_height="80dip"
			android:id="@+id/linearLayoutManageProfiles" android:background="@android:color/black"
			android:layout_width="76dip" android:orientation="vertical"
			android:gravity="center" android:layout_margin="1dip">

			<ImageButton android:layout_height="wrap_content"
				android:src="@android:drawable/ic_menu_edit" android:id="@+id/imageButton2"
				android:layout_width="wrap_content" android:background="@android:color/black"></ImageButton>
			<TextView android:text="@string/menubar_manage" android:id="@+id/textView2"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textColor="@android:color/white" android:gravity="center"></TextView>

		</LinearLayout>

		<!-- SETTINGS -->
		<LinearLayout android:layout_height="78dip"
			android:id="@+id/linearLayoutSettings" android:layout_width="76dip"
			android:orientation="vertical" android:background="@android:color/black"
			android:gravity="center" android:layout_margin="1dip">

			<ImageButton android:layout_height="wrap_content"
				android:src="@android:drawable/ic_menu_manage" android:id="@+id/imageButton3"
				android:background="@android:color/black" android:layout_width="wrap_content"></ImageButton>
			<TextView android:text="@string/menubar_settings"
				android:id="@+id/textView3" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textColor="@android:color/white"
				android:gravity="center"></TextView>

		</LinearLayout>


		<!-- ABOUT -->
		<LinearLayout android:layout_height="80dip"
			android:id="@+id/linearLayoutAbout" android:layout_width="76dip"
			android:orientation="vertical" android:background="@android:color/black"
			android:gravity="center" android:layout_margin="1dip">

			<ImageButton android:layout_height="wrap_content"
				android:src="@android:drawable/ic_menu_info_details" android:id="@+id/imageButton4"
				android:background="@android:color/black" android:layout_width="wrap_content"></ImageButton>
			<TextView android:text="@string/menubar_info" android:id="@+id/textView4"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textColor="@android:color/white" android:gravity="center"></TextView>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>
