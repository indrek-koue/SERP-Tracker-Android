<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/app_bg">
	<TextView android:text="News/updates/changelog" android:id="@+id/textView1"
		android:layout_width="fill_parent" android:layout_height="200dip"></TextView>

	<Button android:text="Send an email to me!" android:id="@+id/button1"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/ok_button" style="@style/ButtonText"></Button>
	<Button android:text="Privacy policy" android:id="@+id/button2"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/back_button" style="@style/ButtonText"></Button>
	<Button android:text="Terms of service" android:id="@+id/button3"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/back_button" style="@style/ButtonText"></Button>
	<Button android:text="Back" android:id="@+id/button4"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/back_button" style="@style/ButtonText"></Button>

</LinearLayout>
